            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Welcome Email Sequence\",\n  \"description\": \"Automated welcome email sequence for new contacts\",\n  \"category\": \"email_automation\",\n  \"trigger\": {\n    \"type\": \"contact_created\",\n    \"conditions\": {\n      \"status\": \"active\",\n      \"has_email\": true\n    }\n  },\n  \"steps\": [\n    {\n      \"id\": \"wait_1hour\",\n      \"type\": \"delay\",\n      \"config\": {\n        \"duration\": \"1h\"\n      }\n    },\n    {\n      \"id\": \"send_welcome_email\",\n      \"type\": \"send_email\",\n      \"config\": {\n        \"template_id\": \"welcome_template_1\",\n        \"from_email\": \"welcome@example.com\",\n        \"from_name\": \"Welcome Team\",\n        \"personalization\": {\n          \"first_name\": \"{{contact.first_name}}\",\n          \"company\": \"{{contact.company}}\"\n        }\n      }\n    },\n    {\n      \"id\": \"wait_3days\",\n      \"type\": \"delay\",\n      \"config\": {\n        \"duration\": \"3d\"\n      }\n    },\n    {\n      \"id\": \"send_followup_email\",\n      \"type\": \"send_email\",\n      \"config\": {\n        \"template_id\": \"followup_template_1\",\n        \"from_email\": \"support@example.com\",\n        \"from_name\": \"Support Team\",\n        \"conditions\": {\n          \"email_opened\": false\n        }\n      }\n    }\n  ],\n  \"settings\": {\n    \"active\": true,\n    \"max_executions\": null,\n    \"timeout\": \"7d\",\n    \"retry_failed\": true\n  }\n}"
            },
