  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "test-auth-token-123",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8004",
      "type": "string"
    },
    {
      "key": "apiVersion",
      "value": "v1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health & Info",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          },
          "response": []
        },
        {
          "name": "Service Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
        {
          "name": "Get Dashboard Metrics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/analytics/dashboard?period=7d",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "analytics", "dashboard"],
              "query": [
                {
                  "key": "period",
                  "value": "7d",
                  "description": "Time period: 1d, 7d, 30d, 90d, 1y"
                },
                {
                  "key": "timezone",
                  "value": "UTC",
                  "disabled": true,
                  "description": "Timezone for date calculations"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Campaign Analytics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/analytics/campaigns?campaign_id={{campaign_id}}&metrics=opens,clicks,conversions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "analytics", "campaigns"],
              "query": [
                {
                  "key": "campaign_id",
                  "value": "{{campaign_id}}",
                  "description": "Specific campaign ID (optional)"
                },
                {
                  "key": "metrics",
                  "value": "opens,clicks,conversions",
                  "description": "Comma-separated list of metrics"
                },
                {
                  "key": "start_date",
                  "value": "2024-01-01",
                  "disabled": true,
                  "description": "Start date (YYYY-MM-DD)"
                },
                {
                  "key": "end_date",
                  "value": "2024-12-31",
                  "disabled": true,
                  "description": "End date (YYYY-MM-DD)"
                },
                {
                  "key": "group_by",
                  "value": "day",
                  "disabled": true,
                  "description": "Group by: hour, day, week, month"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Contact Analytics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/analytics/contacts?metrics=total,active,new,segments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "analytics", "contacts"],
              "query": [
                {
                  "key": "metrics",
                  "value": "total,active,new,segments",
                  "description": "Comma-separated list of contact metrics"
                },
                {
                  "key": "period",
                  "value": "30d",
                  "disabled": true,
                  "description": "Time period for new contacts"
                },
                {
                  "key": "segment",
                  "value": "",
                  "disabled": true,
                  "description": "Filter by specific segment"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Revenue Analytics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/analytics/revenue?period=90d&group_by=month",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "analytics", "revenue"],
              "query": [
                {
                  "key": "period",
                  "value": "90d",
