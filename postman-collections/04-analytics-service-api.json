                {
                  "key": "currency",
                  "value": "USD",
                  "disabled": true,
                  "description": "Currency for revenue calculations"
                },
                {
                  "key": "include_forecast",
                  "value": "true",
                  "disabled": true,
                  "description": "Include revenue forecasting"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Engagement Metrics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/analytics/engagement?channel=email&period=30d",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "analytics", "engagement"],
              "query": [
                {
                  "key": "channel",
                  "value": "email",
                  "description": "Communication channel: email, sms, push"
                },
                {
                  "key": "period",
                  "value": "30d",
                  "description": "Time period for engagement data"
                },
                {
                  "key": "segment",
                  "value": "",
                  "disabled": true,
                  "description": "Filter by contact segment"
                },
                {
                  "key": "include_benchmarks",
                  "value": "true",
                  "disabled": true,
                  "description": "Include industry benchmarks"
                }
              ]
            }
          },
          "response": []
        },
        {
