# Application config
APP_NAME="Workflow Engine Service"
DEBUG=true
API_V1_PREFIX="/api/v1"

# Database settings
DATABASE_URL="postgresql+asyncpg://postgres:postgres@db:5432/workflows"
POSTGRES_POOL_SIZE=20
POSTGRES_POOL_OVERFLOW=10

# Redis settings
REDIS_URL="redis://redis:6379/0"
REDIS_POOL_SIZE=20

# Security
SECRET_KEY="your-secret-key"  # Change this in production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"

# CORS settings
CORS_ORIGINS=["*"]  # Change this in production
CORS_CREDENTIALS=true
CORS_METHODS=["*"]  # Change this in production
CORS_HEADERS=["*"]  # Change this in production

# Workflow Engine settings
MAX_WORKFLOW_STEPS=50
MAX_PARALLEL_EXECUTIONS=10
EXECUTION_TIMEOUT_SECONDS=3600
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=60

# Service integrations
CRM_SERVICE_URL="http://crm-core:8000"
