# Application config
APP_NAME="Communication Hub Service"
DEBUG=true
API_V1_PREFIX="/api/v1"

# Database settings
DATABASE_URL="postgresql+asyncpg://postgres:postgres@db:5432/communication_hub"
POSTGRES_POOL_SIZE=20
POSTGRES_POOL_OVERFLOW=10

# Redis settings
REDIS_URL="redis://redis:6379/0"
REDIS_POOL_SIZE=20

# Google Cloud settings
GOOGLE_PROJECT_ID="your-project-id"
GOOGLE_STORAGE_BUCKET="your-bucket-name"
GOOGLE_PUBSUB_TOPIC="messages"
GOOGLE_PUBSUB_SUBSCRIPTION="messages-sub"

# Channel settings
EMAIL_SMTP_HOST="smtp.gmail.com"
EMAIL_SMTP_PORT=587
EMAIL_USERNAME="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"

TWILIO_ACCOUNT_SID="your-account-sid"
TWILIO_AUTH_TOKEN="your-auth-token"
TWILIO_PHONE_NUMBER="your-phone-number"

# Security settings
SECRET_KEY="your-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"

# CORS settings
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# File upload settings
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "pdf", "doc", "docx"]

# WebSocket settings
WS_HEARTBEAT_INTERVAL=30  # seconds
WS_CLOSE_TIMEOUT=60  # seconds

# Rate limiting
RATE_LIMIT_PER_SECOND=10
