# Application config
APP_NAME="CRM Core Service"
DEBUG=true
API_V1_PREFIX="/api/v1"

# Database settings
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/crm"
POSTGRES_POOL_SIZE=20
POSTGRES_POOL_OVERFLOW=10

# Redis settings
REDIS_URL="redis://localhost:6379/0"
REDIS_POOL_SIZE=20

# Security
SECRET_KEY="your-secret-key"  # Change this in production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM="HS256"

# CORS settings
CORS_ORIGINS=["*"]  # Change this in production
CORS_CREDENTIALS=true
CORS_METHODS=["*"]  # Change this in production
CORS_HEADERS=["*"]  # Change this in production

# Rate limiting
RATE_LIMIT_PER_SECOND=10

# Contact validation
MIN_CONTACT_SCORE=0.0
MAX_CONTACT_SCORE=100.0
